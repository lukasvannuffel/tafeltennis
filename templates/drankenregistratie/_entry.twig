{% extends "index.twig" %}

{% requireLogin %}

{% block title %}Drankenregistratie - HNO Assenede{% endblock %}

{% block content %}

{% block styles %}
<link rel="stylesheet" href="{{ siteUrl }}static/css/pages/Drankenregistratie/drankenregistratie.css">
{% endblock %}

{# Geuploade bannerimage tonen #}
{% set image = entry.banner_image.one() %}
<header class="hero" style="background-image: url('{{ image.url }} '); background-size: cover; background-position: center;">
  <div class="hero-text">
    <h1>{{ entry.title }}</h1>
    <p>{{ entry.subtitle }}</p>
  </div>
</header>


<div class="drankjes-container">
  {% for drankje in craft.entries.section('drankjes').all() %}
    {% set image = drankje.image.one() %}
    <div class="drankje-card">
      <div class="drankje-image-container">
        <img src="{{ image.url }}" alt="{{ drankje.title }}">
      </div>
      <h2>{{ drankje.title }}</h2>
      <p>â‚¬{{ drankje.prijs }}</p>
      <form method="post" action="{{ url('mijn-rekening/') }}">
        {{ csrfInput() }}
        <input type="hidden" name="drankjeId" value="{{ drankje.id }}">
        <button type="submit" class="btn-add">Voeg toe</button>
      </form>
    </div>
  {% endfor %}
</div>

{% endblock %}