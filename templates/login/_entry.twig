{% extends "index.twig" %}

{% block title %}
    Login - HNO Assenede
{% endblock %}

{% block content %}

{% block styles %}
<link rel="stylesheet" href="{{ siteUrl }}static/css/pages/Login/login.css">
{% endblock %}

<form method="post" accept-charset="UTF-8">
  {{ csrfInput() }}
  {{ actionInput('users/login') }}
  {{ redirectInput('home') }}

  <label for="loginName">Username or email</label>
  {{ input('text', 'loginName', craft.app.user.rememberedUsername, {
    id: 'loginName',
    autocomplete: 'username'
  }) }}

  <label for="password">Password</label>
  {{ input('password', 'password', null, {
    id: 'password',
  }) }}

  <label>
    {{ input('checkbox', 'rememberMe', '1') }}
    Remember me
  </label>

  <button>Login</button>

  {% if errorMessage is defined %}
    <p>{{ errorMessage }}</p>
  {% endif %}


<p><a href="{{ url('reset-password') }}">Forgot your password?</a></p>
<h4>Don't have an account yet? <a href="/register">Register here</a></h4>
</form>
{% endblock %}