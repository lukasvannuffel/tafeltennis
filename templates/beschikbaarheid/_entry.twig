{% extends "index.twig" %}
{% requireLogin %}

{% block title %}Wedstrijden - HNO Assenede{% endblock %}

{% block styles %}
<link rel="stylesheet" href="{{ siteUrl }}/css/style.css">
{% endblock %}

{% block content %}
{% set image = entry.image.one() %}

<header class="relative text-white bg-gray-900" style="background-image: url('{{ image.url }}'); background-size: cover; background-position: center;">
  <div class="absolute inset-0 bg-black bg-opacity-60"></div>
  <div class="relative z-10 max-w-6xl mx-auto py-24 px-6 text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight mb-4">{{ entry.title }}</h1>
    <p class="text-lg md:text-xl text-gray-200">{{ entry.subtitle }}</p>
  </div>
</header>

<main class="max-w-6xl mx-auto px-4 py-12">
  <div class="bg-white rounded-2xl shadow-xl p-6 md:p-10">
    <h2 class="text-3xl font-bold text-gray-800 text-center mb-10">Wedstrijden</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for wedstrijd in craft.entries.section('wedstrijden').orderBy('datum ASC').all() %}
        <a href="{{ wedstrijd.url }}" class="block group">
          <div class="bg-gradient-to-br from-gray-50 to-blue-100 p-6 rounded-xl shadow-md group-hover:shadow-lg transition duration-200">
            <h3 class="text-xl font-semibold text-gray-800 group-hover:text-orange-600">{{ wedstrijd.title }}</h3>
            <p class="text-sm text-gray-600 mt-1">{{ wedstrijd.datum|date('d-m-Y') }}</p>
            <p class="text-sm text-gray-600">{{ wedstrijd.adres }}</p>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</main>
{% endblock %}
